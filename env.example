# FAA 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用设置
APP_NAME="Family AI Assistant"
APP_ENV=development  # development, production, test
DEBUG=true

# 数据库配置
DATABASE_URL=postgresql://faa:faa_password@localhost:5432/family_assistant

# OpenAI 配置
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4-turbo-preview

# Threema Gateway 配置
THREEMA_GATEWAY_ID=*XXXXXXX  # 你的 Threema Gateway ID
THREEMA_SECRET=your_threema_secret
THREEMA_PRIVATE_KEY=  # 留空会自动生成，或填入已有的私钥（hex格式）
THREEMA_WEBHOOK_URL=https://your-domain.com/webhook/threema  # 用于接收消息的公网地址

# 安全设置
SECRET_KEY=your_secret_key_here_make_it_long_and_random

# 日志级别
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# MCP 服务器配置（如果使用独立的 MCP 服务）
MCP_SERVER_URL=http://localhost:9000

# 邮件配置（后续扩展）
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_ADDRESS=your-email@gmail.com
# EMAIL_PASSWORD=your-email-password

